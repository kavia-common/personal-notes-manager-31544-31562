---
import TagPills from './TagPills.astro';

export interface Note {
  id: string;
  title: string;
  content: string;
  tags: string[];
  updatedAt: string;
}

export interface Props {
  note: Note;
}
const { note } = Astro.props;
---

<a class="card p-16" href={`/note/${note.id}`}>
  <div class="flex items-center justify-between">
    <h3 style="margin:0 0 6px 0;font-size:16px;">{note.title || 'Untitled'}</h3>
    <span class="text-muted" style="font-size:12px;">{new Date(note.updatedAt).toLocaleString()}</span>
  </div>
  <p class="text-muted" style="margin:0 0 10px 0; display:-webkit-box; -webkit-line-clamp:3; -webkit-box-orient:vertical; overflow:hidden;">
    {note.content || 'No content'}
  </p>
  <TagPills tags={note.tags} clickable={true} />
</a>
